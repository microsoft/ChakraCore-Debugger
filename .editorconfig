# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_style = space
indent_size = 2

[*.{vcxproj,vcxproj.filters,props,targets,config,nuspec}]
end_of_line = crlf

[*.{h,cpp}]
end_of_line = crlf
indent_size = 4
